<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight" >
 
	<ViewFlipper
        android:id="@+id/viewFlipper_pipeline"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:addStatesFromChildren="true" >

       	<LinearLayout
            android:id="@+id/viewFlipper_pipeline_front"
            android:background="@drawable/border_card"
            android:layout_width="fill_parent"
            android:layout_height="300dp">

        </LinearLayout>

       	<LinearLayout
            android:id="@+id/viewFlipper_pipeline_back"
            android:background="@drawable/border_card_back"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:orientation="horizontal">
            
       	    <Button
		        android:id="@+id/button_pipeline_run"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:background="@drawable/bg_button_showpipeline"/>
       	    
       		<Button
		        android:id="@+id/button_pipeline_show"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:background="@drawable/bg_button_runpipeline"/>
       	    
        </LinearLayout>
	</ViewFlipper>
 
</RelativeLayout>